<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f7"
    android:orientation="vertical">

    <include
        layout="@layout/layout_head">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.kproduce.roundcorners.RoundLinearLayout
                    app:rRadius="@dimen/dp_10"
                    android:layout_margin="@dimen/dp_20"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/card1"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            android:gravity="center"
                            android:text="送货上门"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/card2"
                            android:background="#ece8c5"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            android:gravity="center"
                            android:text="到店自取"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/address"
                        android:padding="@dimen/dp_10"
                        android:gravity="center|left"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#333333"
                        android:text="请选择地址"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80">
                    </TextView>

                    <LinearLayout
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="@dimen/dp_10"
                            android:gravity="center|left"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333"
                            android:text="送达时间"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_50">
                        </TextView>
                        <TextView
                            android:id="@+id/sendtime"
                            android:padding="@dimen/dp_10"
                            android:gravity="center|right"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333"
                            android:text="尽快送达"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_50">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:padding="@dimen/dp_10"
                        android:gravity="center|left"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#ac252a"
                        android:text="特殊时期尽量减少接触"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">
                    </TextView>

                </com.kproduce.roundcorners.RoundLinearLayout>

                <com.kproduce.roundcorners.RoundLinearLayout
                    app:rRadius="@dimen/dp_10"
                    android:layout_margin="@dimen/dp_20"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="支付方式"
                        android:padding="@dimen/dp_10"
                        android:layout_margin="@dimen/dp_10"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:background="@drawable/onlinepay"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="在线支付"
                        android:gravity="center"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35">
                    </TextView>

                    <TextView
                        android:text="商品列表"
                        android:padding="@dimen/dp_10"
                        android:layout_margin="@dimen/dp_10"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                    <ListView
                        android:id="@+id/foots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="@dimen/dp_10"
                            android:gravity="center|left"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333"
                            android:text="包装费"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/bzf"
                            android:padding="@dimen/dp_10"
                            android:gravity="center|right"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#ac252a"
                            android:text="免包装费"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="@dimen/dp_10"
                            android:gravity="center|left"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333"
                            android:text="配送费"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/psf"
                            android:padding="@dimen/dp_10"
                            android:gravity="center|right"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#ac252a"
                            android:text="免配送费"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="@dimen/dp_10"
                            android:gravity="center|left"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333"
                            android:text="备注"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:padding="@dimen/dp_10"
                            android:gravity="center|right"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#cccccc"
                            android:text="口味需求"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="@dimen/dp_10"
                            android:gravity="center|left"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333"
                            android:text="合计"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/hj"
                            android:padding="@dimen/dp_10"
                            android:gravity="center|right"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#ac252a"
                            android:text="¥25"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>

                </com.kproduce.roundcorners.RoundLinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:background="#f5f6f7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money"
            android:text="应付:¥0.00"
            android:padding="@dimen/dp_15"
            android:textStyle="bold"
            android:textSize="@dimen/sp_12"
            android:textColor="#fa4169"
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </TextView>

        <TextView
            android:id="@+id/submit"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:background="#ece8c5"
            android:text="提交订单"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent">
        </TextView>

    </LinearLayout>

</LinearLayout>