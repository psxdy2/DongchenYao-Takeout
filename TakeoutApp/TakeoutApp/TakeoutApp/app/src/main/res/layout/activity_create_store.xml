<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:src="@mipmap/h_bg"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

    <ImageView
        android:src="@mipmap/f_bg"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:src="@mipmap/addstore"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100">
        </ImageView>

        <com.kproduce.roundcorners.RoundLinearLayout
            app:rRadius="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9f9f9">
            <TextView
                android:paddingTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="店铺名称"
                android:textColor="#888888"
                android:textSize="@dimen/sp_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/storename"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#333333"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold"
                android:background="#f9f9f9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35" />
        </com.kproduce.roundcorners.RoundLinearLayout>

        <com.kproduce.roundcorners.RoundLinearLayout
            app:rRadius="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9f9f9">
            <TextView
                android:paddingTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="店铺描述"
                android:textColor="#888888"
                android:textSize="@dimen/sp_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/emailcode"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#333333"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold"
                android:background="#f9f9f9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35" />
        </com.kproduce.roundcorners.RoundLinearLayout>

        <FrameLayout
            android:animateLayoutChanges="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.kproduce.roundcorners.RoundButton
                android:id="@+id/next"
                app:rRadius="@dimen/dp_100"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#fa4169"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:text="下一步"/>

        </FrameLayout>

    </LinearLayout>


</FrameLayout>