<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.kproduce.roundcorners.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_margin="@dimen/dp_10"
            android:background="#f1f1f1"
            app:rRadius="@dimen/dp_10">

            <com.kproduce.roundcorners.RoundImageView
                android:id="@+id/portrait"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/takeoutlogo"
                app:rRadius="@dimen/dp_600"></com.kproduce.roundcorners.RoundImageView>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="nicknamne"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"></TextView>

        </com.kproduce.roundcorners.RoundLinearLayout>

        <com.kproduce.roundcorners.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="#f1f1f1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            app:rRadius="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="我的收藏"
                android:textSize="@dimen/sp_12"></TextView>

            <com.demo.takeoutapp.ui.widget.HorizontalListView
                android:id="@+id/collection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">
            </com.demo.takeoutapp.ui.widget.HorizontalListView>

        </com.kproduce.roundcorners.RoundLinearLayout>

        <com.kproduce.roundcorners.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="#f1f1f1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            app:rRadius="@dimen/dp_10">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/mystore"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="@dimen/dp_50"
                       android:layout_height="@dimen/dp_50"
                       android:layout_gravity="center"
                       android:padding="@dimen/dp_8"
                       android:src="@mipmap/addstore"></ImageView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text="我的店铺"
                       android:textColor="#333333"
                       android:textSize="@dimen/sp_12"></TextView>
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/aboutmy"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="@dimen/dp_50"
                       android:layout_height="@dimen/dp_50"
                       android:layout_gravity="center"
                       android:padding="@dimen/dp_8"
                       android:src="@mipmap/aboutmy"></ImageView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text="关于我们"
                       android:textColor="#333333"
                       android:textSize="@dimen/sp_12"></TextView>
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/addressmanager"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="@dimen/dp_50"
                       android:layout_height="@dimen/dp_50"
                       android:layout_gravity="center"
                       android:padding="@dimen/dp_8"
                       android:src="@mipmap/goods"></ImageView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text="地址管理"
                       android:textColor="#333333"
                       android:textSize="@dimen/sp_12"></TextView>
               </LinearLayout>
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/delivery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_8"
                        android:src="@mipmap/qs"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="申请骑手"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weather"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_8"
                        android:src="@mipmap/tq"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="当地天气"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    </LinearLayout>
            </LinearLayout>

        </com.kproduce.roundcorners.RoundLinearLayout>

        <com.kproduce.roundcorners.RoundImageView
            android:id="@+id/advertisement"
            android:layout_width="match_parent"
            app:rRadius="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="@dimen/dp_150"
            android:layout_margin="@dimen/dp_10">
        </com.kproduce.roundcorners.RoundImageView>

    </LinearLayout>

</LinearLayout>